<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="flex">
        <%- include('../partials/sidebar', { req: req }) %>

        <!-- Main Content -->
        <div class="p-8 w-full md:ml-64">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-semibold text-gray-900">Manage Leads</h1>
                <a href="/leads/new" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                    Add New Lead
                </a>
            </div>

            <!-- Leads Table -->
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (leads && leads.length > 0) { %>
                            <% leads.forEach(function(lead) { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-gray-900"><%= lead.name || 'N/A' %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900"><%= lead.company || 'N/A' %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900"><%= lead.email || 'N/A' %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-gray-900"><%= lead.phone || 'N/A' %></div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <% 
                                            let statusClass = 'bg-gray-100 text-gray-800';
                                            const status = lead.status || 'New';
                                            if (status === 'New') statusClass = 'bg-green-100 text-green-800';
                                            else if (status === 'Contacted') statusClass = 'bg-blue-100 text-blue-800';
                                            else if (status === 'Qualified') statusClass = 'bg-yellow-100 text-yellow-800';
                                        %>
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= statusClass %>">
                                            <%= status %>
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <a href="/leads/<%= lead.id %>/edit" class="text-blue-600 hover:text-blue-900 mr-3">Edit</a>
                                        <button onclick="deleteLead('<%= lead.id %>')" class="text-red-600 hover:text-red-900">Delete</button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                    No leads found
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Delete Form -->
    <form id="deleteForm" method="POST" style="display: none;">
        <input type="hidden" name="_method" value="DELETE">
    </form>

    <script>
        function deleteLead(id) {
            if (confirm('Are you sure you want to delete this lead?')) {
                const form = document.getElementById('deleteForm');
                form.action = `/leads/${id}/delete`;
                form.submit();
            }
        }
    </script>
</body>
</html> 